/* pages/book/book.wxss */

.header {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 99;
  background-color: #fff;
}
.input-bg {
  width: 100%;
  height: 68rpx;
  background-color: #f7f7f7;
  border-radius: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center
}
.search-icon {
  margin-bottom: -2px;
  width: 20rpx;
  height: 20rpx;
  margin-right: 10px;
}
.input-bg text {
  font-size: 28rpx;
  color: #999999;
}
.container {
  margin-top: 108rpx;
  background-color: #f9f9f9;
  text-align: center;
}
.title-img {
  width: 107rpx;
  height: 32rpx;
  margin-top: 40rpx;
}
.list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 100rpx;
  justify-content: space-between;
}
.list c-list {
  margin-top: 60rpx;
}